import os
import time
import random
import logging
from telegram import Bot
from datetime import datetime

logging.basicConfig(level=logging.INFO)

BOT_TOKEN = os.getenv("BOT_TOKEN")
ASSETS = os.getenv("ASSETS", "URUUSD,BRLUSD,BDTUSD").split(",")
INTERVAL_MINUTE = int(os.getenv("INTERVAL_MINUTE", "5"))

bot = Bot(token=BOT_TOKEN)

def generate_signal():
    asset = random.choice(ASSETS)
    direction = random.choice(["üü¢ Buy", "üî¥ Sell"])
    expiry = "1 minute"
    signal_time = datetime.now().strftime("%H:%M:%S")

    message = f"""
üì¢ New Signal!
Asset: {asset}
Direction: {direction}
Expiry: {expiry}
Time: {signal_time}
    """.strip()
    return message

def result_message():
    return random.choice(["‚úÖ Win", "‚ùå Loss"])

def main_loop():
    chat_id = "@ratulquotexbot_bot"
    while True:
        try:
            signal = generate_signal()
            bot.send_message(chat_id=chat_id, text=signal)
            time.sleep(60)
            bot.send_message(chat_id=chat_id, text=result_message())
        except Exception as e:
            logging.error(f"Error: {e}")
        time.sleep(INTERVAL_MINUTE * 60)

if __name__ == "__main__":
    main_loop()
